-- можно выбрать поле для объеденения
-- нужно 2 поля с одинаковыми названиями и типами
-- нужно указывать из какой таблицы поле
-- для общего столбца не нужно писать откуда это поле


select * from employees e
join departments d using (department_id);

select * from regions t
join countries c using(region_id); 

select * from employees e
join job_history j using(employee_id); 
